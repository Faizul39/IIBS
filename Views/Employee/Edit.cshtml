@model IIBS.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/employee.css" rel="stylesheet" />

<body2>
    <div class="container">
        <header>Employee Information</header>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form first">
                <div class="details Protein">
                    <div class="fields">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="EmployeeID" />
                        <div class="input-field">
                            <label asp-for="EmployeeID">Employee ID</label>
                            <input asp-for="EmployeeID" type="number" onchange="setTwoNumberDecimal" min="0" max="1000" placeholder="Enter Employee ID" />
                        </div>
                        <div class="input-field">
                            <label asp-for="First_Name">First Name</label>
                            <input asp-for="First_Name" type="text" placeholder="Enter First Name" />
                        </div>
                        <span asp-validation-for="First_Name" class="text-danger"></span>
                        <div class="input-field">
                            <label asp-for="Last_Name">Last Name</label>
                            <input asp-for="Last_Name" type="text" placeholder="Enter Last Name" />
                        </div>
                        <span asp-validation-for="Last_Name" class="text-danger"></span>
                        <div class="input-field">
                            <label asp-for="Division">Division</label>
                            <input asp-for="Division" type="text" placeholder="Enter Division" />
                        </div>
                        <span asp-validation-for="Division" class="text-danger"></span>
                        <div class="input-field">
                            <label asp-for="Title_and_Room">Title & Room</label>
                            <input asp-for="Title_and_Room" type="text" placeholder="Enter Title & Room" />
                        </div>
                        <span asp-validation-for="Title_and_Room" class="text-danger"></span>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</body2>

