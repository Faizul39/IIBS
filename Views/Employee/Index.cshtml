@model IEnumerable<IIBS.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

<h3 class="text-center"><i class="fas fa-comment-doller text-success"></i>Employee Information</h3>

